    <div class="container">
        <hr>
        <h1>Perguntas</h1>
        <hr>
        <a href="/ask"><button class="btn btn-success">Perguntar</button></a>
        <hr>
        <% asks.forEach(ask => { %>
            <br>
            <div class="card">
                <div class="card-body">
                    <h3><%= ask.title %></h3>
                </div>
                <div class="card-footer">
                    <a href="/asked/<%= ask.id %>"><button class="btn btn-success">Responder</button></a>
                </div>
            </div>
        <% }) %>

    </div>

</body>

